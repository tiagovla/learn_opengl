root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

indent_style = space
indent_size = 4

[*.{cpp,h,hpp,c}]
indent_style = space
indent_size = 2

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[.yaml]
indent_style = space
indent_size = 2
